# Step 1: Use the official Nginx image
FROM nginx:latest

# Step 2: Remove the default Nginx HTML files
RUN rm -rf /usr/share/nginx/html/*

# Step 3: Copy our custom web pages into the Nginx web directory
COPY index.html /usr/share/nginx/html/
COPY about.html /usr/share/nginx/html/
COPY contact.html /usr/share/nginx/html/

# Step 4: Copy the custom Nginx configuration file
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Step 5: Expose port 80 for web traffic
EXPOSE 80

# Step 6: Start Nginx
CMD ["nginx", "-g", "daemon off;"]
